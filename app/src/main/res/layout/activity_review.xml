<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1F1D2B"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tvReviewHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ÔN TẬP BÀI THI"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvReviewSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem lại chi tiết câu trả lời của bạn."
        android:textColor="#9E9EA7"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvReviewList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>