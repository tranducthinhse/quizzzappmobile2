<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1D2B"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, Dev!"
                    android:textColor="#9E9EA7"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coder Pro"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btnLeaderboard"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_trophy"
                android:background="@drawable/bg_card_dark"
                android:padding="10dp"
                app:tint="#FFB84C"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/btnHistory"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:background="@drawable/bg_card_dark"
                android:padding="10dp"
                app:tint="#6C5DD3"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/imgUserAvatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:background="@drawable/bg_card_dark"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_search_dark"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">_"
                android:textColor="#00D2FC"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Search tech stack..."
                android:textColorHint="#666670"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardBanner"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/layoutSearch">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_banner_gradient"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvBannerSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAILY ALGORITHM"
                    android:textColor="#E0D4FC"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBannerSub"
                    android:text="Solve 'Two Sum' Problem"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:text="Code Now"
                    android:textSize="10sp"
                    android:textColor="#1F1D2B"
                    android:textStyle="bold"
                    android:backgroundTint="#00D2FC"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_code"
                    app:tint="#30FFFFFF"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginEnd="-10dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Stacks"
            android:textColor="#00D2FC"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/cardBanner"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvListTitle"
            tools:listitem="@layout/item_quiz_tech" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>