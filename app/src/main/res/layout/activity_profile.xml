<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1D2B"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <View
            android:id="@+id/viewHeaderProfile"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_banner_gradient"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HỒ SƠ CODER"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="140dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#252836"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="70dp"
                android:paddingBottom="30dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THÔNG TIN CÁ NHÂN"
                    android:textColor="#6C5DD3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã Định Danh (ID)"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginBottom="6dp"/>
                <EditText
                    android:id="@+id/edtId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="ID"
                    android:enabled="false"
                    android:background="@drawable/bg_input_dark"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp"
                    android:textColor="#9E9EA7"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và Tên"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="6dp"/>
                <EditText
                    android:id="@+id/edtFullName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Nhập tên của bạn"
                    android:inputType="textPersonName"
                    android:background="@drawable/bg_input_dark"
                    android:paddingHorizontal="16dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666670"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Điện Thoại"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="6dp"/>
                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Số điện thoại"
                    android:inputType="phone"
                    android:background="@drawable/bg_input_dark"
                    android:paddingHorizontal="16dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666670"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa Chỉ"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="6dp"/>
                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Địa chỉ hiện tại"
                    android:inputType="textPostalAddress"
                    android:background="@drawable/bg_input_dark"
                    android:paddingHorizontal="16dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666670"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Sinh"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/tvDob"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Chọn Ngày"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_input_dark"
                    android:paddingHorizontal="16dp"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới Tính"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="8dp"/>
                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_input_dark"
                    android:padding="8dp">
                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#00D2FC"/>
                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FF3D71"/>
                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="#252836"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/cardContent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CẤU HÌNH BÀI THI"
                    android:textColor="#6C5DD3"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thời Gian Mỗi Câu"
                        android:textColor="#FFFFFF"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchTimePerQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="#00D2FC"
                        app:trackTint="#2F3142"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giới hạn thời gian cho một câu"
                        android:textColor="#9E9EA7"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/tvTimePerQVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10s"
                        android:textColor="#00D2FC"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderTimePerQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="5.0"
                    android:valueTo="60.0"
                    android:stepSize="5.0"
                    android:value="10.0"
                    app:thumbColor="#00D2FC"
                    app:trackColorActive="#00D2FC"
                    app:trackColorInactive="#2F3142"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2F3142"
                    android:layout_marginVertical="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng Thời Gian Bài Thi"
                        android:textColor="#FFFFFF"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="#FF3D71"
                        app:trackTint="#2F3142"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giới hạn thời gian toàn bài"
                        android:textColor="#9E9EA7"
                        android:textSize="10sp"/>
                    <TextView
                        android:id="@+id/tvTotalTimeVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5m"
                        android:textColor="#FF3D71"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderTotalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="1.0"
                    android:valueTo="30.0"
                    android:stepSize="1.0"
                    android:value="5.0"
                    app:thumbColor="#FF3D71"
                    app:trackColorActive="#FF3D71"
                    app:trackColorInactive="#2F3142"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2F3142"
                    android:layout_marginVertical="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số Lượng Câu Hỏi"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tvCountVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#FFB84C"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="1.0"
                    android:valueTo="20.0"
                    android:stepSize="1.0"
                    android:value="10.0"
                    app:thumbColor="#FFB84C"
                    app:trackColorActive="#FFB84C"
                    app:trackColorInactive="#2F3142"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_input_dark"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgIconSoundMaster"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_silent_mode_off"
                        app:tint="#00D2FC"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Âm Thanh Chính"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvSoundStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhạc Nền &amp; Hiệu Ứng"
                            android:textColor="#9E9EA7"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSoundMaster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="#00D2FC"
                        app:trackTint="#2F3142"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="LƯU THAY ĐỔI"
            android:textStyle="bold"
            android:textColor="#1F1D2B"
            android:backgroundTint="#00D2FC"
            app:cornerRadius="12dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardSettings"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ĐĂNG XUẤT"
            android:textColor="#FF3D71"
            android:textStyle="bold"
            android:backgroundTint="#2F3142"
            app:cornerRadius="12dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#FF3D71"
            app:strokeWidth="1dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnSaveProfile"/>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#252836"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardContent"
            app:layout_constraintBottom_toTopOf="@id/cardContent">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/sym_def_app_icon"
                android:scaleType="centerCrop"
                android:padding="4dp"
                android:background="@drawable/bg_icon_glow_cyan"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@drawable/bg_search_dark"
            android:padding="8dp"
            android:elevation="12dp"
            app:tint="#00D2FC"
            android:translationX="40dp"
            android:translationY="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardContent"
            app:layout_constraintBottom_toTopOf="@id/cardContent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>