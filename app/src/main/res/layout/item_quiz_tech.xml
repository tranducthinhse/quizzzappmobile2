<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#252836"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_code"
                app:tint="#6C5DD3"
                android:background="@drawable/bg_search_dark"
                android:padding="8dp"/>

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hard"
                android:textSize="10sp"
                android:textColor="#1F1D2B"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_input_rounded"
                android:backgroundTint="#FF3D71"/> </LinearLayout>

        <TextView
            android:id="@+id/tvQuizTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JavaScript"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:lines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvQuizInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Qs â€¢ 15 Mins"
            android:textColor="#9E9EA7"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnStartQuiz"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Start"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2F3142"
            android:layout_marginTop="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:strokeColor="#6C5DD3"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>